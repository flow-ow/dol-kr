:: Widgets sydneyPost [widget nobr]
/* 시드니 관련 Post 시리즈. 위젯 원본은 overworld-town/special-sydney/widgets.twee 에 있으므로 해당 파일이 변경되면 확인할 것 */
<<widget "sydneyGenitalsPost">><<silently>>
	<<set _trResult to "">>
	<<if _args[0] is undefined or typeof _args[0] is "string" and _args[0].substring(0,1).search("[가-힣]") gte 0>>	/* 첫번째 옵션이 한글 - 조사 */
		<<set $_post to _args[0]>><<set $_sep to _args[1]>>
	<<else>>
		<<set $_post to _args[1]>><<set $_sep to _args[2]>>
	<</if>>
	<<if ($NPCName[$NPCNameList.indexOf("Sydney")].chastity.penis.includes("chastity") or $NPCName[$NPCNameList.indexOf("Sydney")].chastity.vagina.includes("chastity")) and _args[0] isnot 'short' and $sydneyChastityKnown>>
		<<set _trResult += "보호된 ">>
	<</if>>
	<<if _args[0] isnot 'short' and (($NPCName[$NPCNameList.indexOf("Sydney")].virginity.penile is true and $NPCName[$NPCNameList.indexOf("Sydney")].gender is "m") or ($NPCName[$NPCNameList.indexOf("Sydney")].virginity.vaginal is true and $NPCName[$NPCNameList.indexOf("Sydney")].gender is "f"))>>
		<<if $NPCName[$NPCNameList.indexOf("Sydney")].gender is "m">>
			<<set _trResult += "동정 ">>
		<<else>>
			<<set _trResult += "처녀 ">>
		<</if>>
	<</if>>
	<<if $NPCName[$NPCNameList.indexOf("Sydney")].gender is "m">>
		<<set _trResult += "자지">>
	<<else>>
		<<set _trResult += "보지">>
	<</if>>
	<<trPost 1 $_post $_sep>>
<</silently>><<print _trResult>><</widget>>

