		<<set _trResult to ($sydney.swim is "crossdress" ? "소녀" : "소년")>><<set _postNum to ($sydney.swim is "crossdress" ? 1 : 0)>>
	<<else>>
		<<set _trResult to ($sydney.swim is "crossdress" ? "소년" : "소녀")>><<set _postNum to ($sydney.swim is "crossdress" ? 0 : 1)>>
