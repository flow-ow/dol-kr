		<<else>>
			<<set _trResult to "마이크로비키니">><<trPost 1 _args[0] _args[1]>>
		<</if>>
	<<case "crossdress">>
		<<if $pronoun is "m">>
			<<set _trResult to "비키니">><<trPost 1 _args[0] _args[1]>>
		<<else>>
			<<set _trResult to "보드쇼츠">><<trPost 1 _args[0] _args[1]>>
